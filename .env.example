# ======================
# APPLICATION
# ======================
NODE_ENV=development
PORT=3000
SERVER_HOST=0.0.0.0

# ======================
# DATABASE
# ======================
DATABASE_URL=postgresql://admin:admin@localhost:5432/appdb?schema=public

# ======================
# JWT
# ======================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# ======================
# CORS
# ======================
# Múltiplas origens separadas por vírgula
# Use "*" para permitir todas (não recomendado em produção)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ======================
# RATE LIMITING
# ======================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# ======================
# LOGGING
# ======================
LOG_LEVEL=info
