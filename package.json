{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "dev": "tsx -r tsconfig-paths/register --watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "prisma:generate": "prisma generate",
    "prisma:studio": "prisma studio --hostname 0.0.0.0 --browser none",
    "prisma:validate": "prisma validate",
    "prisma:format": "prisma format",
    "prisma:doctor": "prisma doctor",
    "db:migrate:dev": "prisma migrate dev --name init",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:reset": "prisma migrate reset --force",
    "db:push": "prisma db push",
    "db:seed": "ts-node prisma/seed.ts",
    "docker:prisma:generate": "npx prisma generate --schema=./prisma/schema.prisma",
    "docker:prisma:deploy": "npx prisma migrate deploy",
    "db:prepare": "npm run prisma:generate && npm run db:migrate:deploy",
    "postinstall": "prisma generate"
  },
  "repository": {
    "type": "git",
